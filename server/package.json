{
    "name": "atelier2-server",
    "version": "0.1.0",
    "description": "Backend server microservice for the portal and analytics",
    "main": "dist/index.js",
    "license": "MIT",
    "engines": {
        "node": ">=18"
    },
    "scripts": {
        "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
        "build": "tsc -p tsconfig.json",
        "start": "node dist/index.js",
        "lint": "tsc --noEmit",
        "db:migrate": "npm run build && node dist/database/migrate.js"
    },
    "dependencies": {
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.19.2",
        "helmet": "^7.0.0",
        "pg": "^8.12.0",
        "reflect-metadata": "^0.1.13",
        "typeorm": "^0.3.20"
    },
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/node": "^20.11.10",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.6.3"
    }
}