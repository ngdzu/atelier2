            EC[EmployeeColumns<br/>If Multi-Employee]
            AC1[AppointmentCard<br/>Positioned by Time]
        end

        subgraph "Week View"
            WV[WeekView]
            DC[DayColumn<br/>Repeated 7x]
            DH[DayHeader]
            TSC2[TimeSlotColumn]
            AC2[AppointmentCard<br/>Positioned by Day/Time]
            EC2[EmployeeColumns<br/>If Multi-Employee]
        end

        subgraph "Month View"
            MV[MonthView]
            MH[MonthHeader]
            WR[WeekRow<br/>Repeated]
            DC2[DayCell<br/>Repeated]
            DN2[DayNumber]
            AI[AppointmentIndicators<br/>Dots]
            AT[AppointmentTooltip<br/>On Hover]
        end
    end

    subgraph "Modals"
        AM[AppointmentModal<br/>Portal]
        AMH[AppointmentHeader]
        CI[CustomerInfo]
        EI[EmployeeInfo]
        SVI[ServiceInfo]
        AMD[AppointmentDetails]
        DTD[DateTimeDisplay]
        SD[StatusDisplay]
        ND[NotesDisplay]
        AMA[AppointmentActions]
        EB[EditButton]
        SCD[StatusChangeDropdown]
        CB[CancelButton]
        DB[DeleteButton]

        AF[AppointmentForm<br/>Modal]
