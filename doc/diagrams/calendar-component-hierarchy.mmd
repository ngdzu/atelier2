graph TD
    CL[CalendarLayout<br/>Main Container]
    
    subgraph "Header Section"
        CH[CalendarHeader]
        DN[DateNavigation<br/>Prev/Next/Today/DatePicker]
        VS[ViewSwitcher<br/>Day/Week/Month Buttons]
        CA[CalendarActions<br/>Export/Refresh]
    end

    subgraph "Filters Section"
        CF[CalendarFilters<br/>Collapsible Sidebar]
        EF[EmployeeFilter<br/>Multi-select]
        SF[StatusFilter<br/>Checkboxes]
