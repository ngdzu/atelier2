        ES[EmployeeSelector]
        SS[ServiceSelector<br/>Multi-select]
        DTP[DateTimePicker]
        NT[NotesTextarea]
        CW[ConflictWarning<br/>Conditional]
        FA[FormActions]
        SB[SaveButton]
        CB2[CancelButton]
        VE[ValidationErrors]
    end

