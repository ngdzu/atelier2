%% Dashboard Management System - Gallery Management Use Cases
%% Detailed use cases for Gallery module

graph TB
    %% Actors (rectangles)
    Owner[Owner]
    Manager[Manager]
    Admin[Admin]
    
    %% Use Cases (rounded rectangles - closest to UML ellipses)
    UC1(Upload Images<br/>Single & Bulk)
    UC2(Edit Image Metadata<br/>Title, Description, Alt Text)
    UC3(Organize Images<br/>Category & Display Order)
    UC4(Delete Images<br/>Remove from Gallery)
    UC5(Filter Images<br/>Search & Category Filter)
    
    %% Owner relationships
    Owner --> UC1
    Owner --> UC2
    Owner --> UC3
    Owner --> UC4
    Owner --> UC5
    
    %% Manager relationships
    Manager --> UC1
    Manager --> UC2
    Manager --> UC3
    Manager --> UC4
    Manager --> UC5
    
    %% Admin relationships
    Admin --> UC1
    Admin --> UC2
    Admin --> UC3
    Admin --> UC4
    Admin --> UC5
    
    %% Styling
    classDef actor fill:#e1f5ff,stroke:#01579b,stroke-width:2px,color:#000000
    classDef usecase fill:#fce4ec,stroke:#880e4f,stroke-width:1px,color:#000000
    
    class Owner,Manager,Admin actor
    class UC1,UC2,UC3,UC4,UC5 usecase

