#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Navigate to client directory if we're in the root
if [ -d "client" ]; then
  cd client
fi

# Run lint-staged for linting and formatting staged files
echo "ğŸ” Running lint-staged on staged files..."
npx lint-staged

# Check if lint-staged passed
if [ $? -ne 0 ]; then
  echo "âŒ Linting or formatting failed on staged files. Commit blocked."
  exit 1
fi

# Run full lint check on entire codebase
echo "ğŸ” Running full lint check..."
npm run lint:ci

# Check if linting passed
if [ $? -ne 0 ]; then
  echo "âŒ Linting failed. Commit blocked."
  exit 1
fi

# Run tests with coverage (coverage threshold is enforced in vitest.config.ts)
echo "ğŸ§ª Running tests with coverage..."
npm run test:ci

# Check if tests passed
if [ $? -ne 0 ]; then
  echo "âŒ Tests failed or coverage below threshold. Commit blocked."
  exit 1
fi

echo "âœ… All checks passed. Proceeding with commit."

